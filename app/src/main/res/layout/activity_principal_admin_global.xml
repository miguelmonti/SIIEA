<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.miguelangel.savenergy.Principal_admin_global">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textAlignment="viewEnd"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="101dp"
                    android:layout_height="95dp"
                    android:layout_gravity="center"
                    android:contentDescription="Logo banner"
                    android:src="@drawable/logo"
                    tools:ignore="MissingConstraints" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_bienvenita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="30sp"
                android:text="Bienvenido Administrador!" />

            <TextView
                android:id="@+id/txt_gestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Gestiona el sistema." />


            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/ib_rango_consumo"
                        android:layout_width="120sp"
                        android:layout_height="120sp"
                        app:srcCompat="@drawable/ic_facturacion" />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/ib_tarifas"
                        android:layout_width="120sp"
                        android:layout_height="120sp"
                        android:contentDescription="fsdfs"
                        app:srcCompat="@drawable/ic_generacion" />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/ib_tipo_consumo"
                        android:layout_width="120sp"
                        android:layout_height="120sp"
                        app:srcCompat="@drawable/ic_facturacion" />
                </TableRow>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/ib_nivel_consumo"
                        android:layout_width="120sp"
                        android:layout_height="120sp"
                        app:srcCompat="@drawable/ic_facturacion" />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/ib_cuotas"
                        android:layout_width="120sp"
                        android:layout_height="120sp"
                        app:srcCompat="@drawable/ic_facturacion" />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/ib_productos"
                        android:layout_width="120sp"
                        android:layout_height="120sp"
                        app:srcCompat="@drawable/ic_facturacion" />
                </TableRow>
            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/ib_usuarios"
                        android:layout_width="120sp"
                        android:layout_height="120sp"
                        app:srcCompat="@drawable/ic_facturacion" />
                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </TableRow>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
